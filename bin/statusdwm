#!/usr/bin/env bash

get_ps_count() {
	echo -en '\x04'
	ps --no-headers -U $USER -u $USER u | wc -l
}

get_keyboard_layout() {
	if [[ "$(skb -1)" == "Eng" ]]; then
		echo -en "\x02EN"
	else
		echo -en "\x03RU"
	fi
}

get_date() {
	echo -en "\x01 $(date +'%d/%b/%Y [%a]\x05%k:%M')"
}

while true; do
	xsetroot -name "$(get_date) $(get_keyboard_layout)$(get_ps_count)"
	sleep 1
done
